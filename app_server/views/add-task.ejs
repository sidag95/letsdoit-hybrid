<!DOCTYPE html>
<html>
  <head>
  	<meta name='viewport' content='width=device-width' initial-scale=1.0/>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
    	<div class="container">
    		<div class="navbar-header">
    			<a href="/" class="navbar-brand">LetsDo.It</a>
    			<button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
    				<span class="icon-navbar"></span>
    				<span class="icon-navbar"></span>
    				<span class="icon-navbar"></span>
    			</button>
    		</div>
    		<div id="navbar-main" class="navbar-collapse collapse">
    			<ul class="nav navbar-nav pull-right">
    				<li><a href="/about">About</a></li>
    				<li><a href="/signup">Signup</a></li>
    				<li><a href="/login">Login</a></li>
    			</ul>
    		</div>
    	</div>
    </nav>

    <div class="container">
        <div class="row">
            <p class="align-center"><h3>Add a new Task</h3><br><br></p>
        </div>
        <div class="row">
            <% if( error === 'var'){%>
            <div class="col-md-12 alert alert-danger" role="alert">All fields are required</div>
            <% } %>
            <form action='<%=url%>' method="post" role="form">
              <div class="form-group">
                <label for="taskName">Task Name</label>
                <input type="text" class="form-control input-lg" name="taskName" id="taskName" placeholder="Task Name">
              </div><br>
              <div class="form-group">
                <label for="taskBody">Task Details</label>
                <textarea class="form-control input-lg" id="taskBody" name="taskBody" placeholder="Task" rows="3"></textarea>
              </div><br>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>


    <!-- Footer -->
    <footer class="nav navbar-fixed-bottom">
        <div class="row">
            <div class="col-xs-12">
                <small class="align-center">&copy LetsDo.It</small>
            </div>
        </div>
    </footer>

    <script type="text/javascript" src="/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/add-task.js"></script>

  </body>
</html>
